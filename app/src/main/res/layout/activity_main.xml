<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.097" />


    <ImageView
        android:id="@+id/kill"
        android:layout_width="189dp"
        android:layout_height="191dp"
        android:layout_marginTop="136dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count"
        app:srcCompat="@drawable/berserk" />

    <ImageView
        android:id="@+id/improve"
        android:layout_width="126dp"
        android:layout_height="67dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kill"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/sword" />

    <ImageView
        android:id="@+id/knight"
        android:layout_width="126dp"
        android:layout_height="67dp"
        android:layout_marginStart="16dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/improve"
        app:layout_constraintTop_toTopOf="@+id/improve"
        app:srcCompat="@drawable/knight" />

</androidx.constraintlayout.widget.ConstraintLayout>