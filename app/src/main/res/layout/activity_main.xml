<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mainMenuUp"
        android:layout_width="match_parent"
        android:layout_height="717dp"
        android:layout_weight=".5">


        <ImageView
            android:id="@+id/kill"
            android:layout_width="189dp"
            android:layout_height="191dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/count"
            app:srcCompat="@drawable/berserk" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="0"
            android:textSize="50dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/my_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/mainMenuDown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/frame"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:elevation="10dp"
                            android:text="ЗДЕСЬ ПОКА НИЧЕГО НЕТ"
                            android:textSize="20dp" />

                    </FrameLayout>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="86dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="10dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:text="ГНЕВ\n(+1 клик)"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/buttonAngry"
                            android:layout_width="match_parent"
                            android:layout_height="86dp"
                            android:background="@drawable/my_border" />

                        <TextView
                            android:id="@+id/textCountAngry"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom|right"
                            android:layout_marginRight="20dp"
                            android:elevation="10dp"
                            android:gravity="center"
                            android:text="КУПИТЬ"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/textCostAngry"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_gravity="bottom|left"
                            android:elevation="10dp"
                            android:gravity="bottom"
                            android:paddingLeft="10dp"
                            android:paddingBottom="5dp"
                            android:text="СТОИМОСТЬ: 100"
                            android:textSize="20dp" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="86dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="10dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:text="ДЛИНА МЕЧА\n(+3 клика)"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/buttonSwordLength"
                            android:layout_width="match_parent"
                            android:layout_height="86dp"
                            android:background="@drawable/my_border" />

                        <TextView
                            android:id="@+id/textCountLength"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom|right"
                            android:layout_marginRight="20dp"
                            android:elevation="10dp"
                            android:gravity="center"
                            android:text="КУПИТЬ"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/textCostLength"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_gravity="bottom|left"
                            android:elevation="10dp"
                            android:gravity="bottom"
                            android:paddingLeft="10dp"
                            android:paddingBottom="5dp"
                            android:text="СТОИМОСТЬ: 200"
                            android:textSize="20dp" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="86dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="10dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:text="ПРЕДЧУВСТВИЕ ЗЛА\n(+10 кликов)"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/buttonEvil"
                            android:layout_width="match_parent"
                            android:layout_height="86dp"
                            android:background="@drawable/my_border" />

                        <TextView
                            android:id="@+id/textCountEvil"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom|right"
                            android:layout_marginRight="20dp"
                            android:elevation="10dp"
                            android:gravity="center"
                            android:text="КУПИТЬ"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/textCostEvil"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_gravity="bottom|left"
                            android:elevation="10dp"
                            android:gravity="bottom"
                            android:paddingLeft="10dp"
                            android:paddingBottom="5dp"
                            android:text="СТОИМОСТЬ: 300"
                            android:textSize="20dp" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="86dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="10dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:text="БРОНЯ БЕРСЕРКА\n(+30 кликов)"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/buttonArmor"
                            android:layout_width="match_parent"
                            android:layout_height="86dp"
                            android:background="@drawable/my_border" />

                        <TextView
                            android:id="@+id/textCountArmor"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom|right"
                            android:layout_marginRight="20dp"
                            android:elevation="10dp"
                            android:gravity="center"
                            android:text="КУПИТЬ"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/textCostArmor"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_gravity="bottom|left"
                            android:elevation="10dp"
                            android:gravity="bottom"
                            android:paddingLeft="10dp"
                            android:paddingBottom="5dp"
                            android:text="СТОИМОСТЬ: 500"
                            android:textSize="20dp" />
                    </FrameLayout>

                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

    </LinearLayout>




    <LinearLayout
        android:id="@+id/menuIcons"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="@color/black">

        <ImageView
            android:id="@+id/improve"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1.0"
            android:onClick="onSlideViewButtonClick"
            app:srcCompat="@drawable/sword_down" />

        <ImageView
            android:id="@+id/knight"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/improve"
            android:layout_weight="1.0"
            android:layout_gravity="center"
            app:srcCompat="@drawable/mark" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:layout_toRightOf="@+id/knight"
            android:layout_weight="1.0"
            app:srcCompat="@drawable/ded" />
    </LinearLayout>


</LinearLayout>